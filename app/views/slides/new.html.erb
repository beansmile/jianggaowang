<section class="panel new-slides clearfix">
  <header class="panel-header with-hr clearfix">
    <h1 class="panel-title">上传讲稿</h1>
  </header>
  <div class="slides-wrap clearfix">
    <%= form_for @slide do |f| %>
      <%= hidden_field_tag 'event_id', @slide.event.id %>
      <div class="file-upload">
        <div class="cover">
          <span class="progress"></span>
          <span class="upload-done">正在后台转换中...</span>
        </div>
        <div class="cover-upload">
          <div class="upload-lecture">
            <span>上传讲稿</span>
            <span class="upload icon"></span>
            <%= f.file_field :file, id: 'upload_lecture', accept: 'application/pdf', required: true  %>
          </div>
          <div class="upload-audio">
            <span>上传音频</span>
            <span class="upload icon"></span>
            <input id="upload_audio" type="file" name="audio" accept="audio/*">
          </div>
          <!--上传音频上传完之后才会显示-->
          <div class="live-record">
            <span>现场录音.mp3</span>
            <span class="icon-close icon"></span>
          </div>
        </div>
      </div>
      <div class="file-info form-default">
        <div class="title clearfix">
          <label>讲稿标题</label>
          <%= f.text_field :title %>
        </div>
        <div class="title clearfix">
          <label>作者</label>
          <%= f.text_field :author %>
        </div>
        <div class="tag clearfix">
          <label>标签</label>
          <%= f.text_field :tag_list %>
        </div>
        <div class="introduction clearfix">
          <label>讲稿介绍</label>
          <%= f.text_area :description %>
        </div>
        <div class="btn-operate clearfix">
          <%= f.button '完成上传', class: 'btn-default btn-warning' %>
        </div>
      </div>
    <% end %>
  </div>
</section>
