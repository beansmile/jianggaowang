<% content_for :title do %>
用户登录
<% end %>

<div class="user-page login-page">
  <div class="user-title clearfix">
    <span class="logo"></span><p>讲稿网，让智慧流动</p>
  </div>
  <div class="login-register">
    <ul class="title">
      <li class="login active"><a href="">登录</a></li>
      <li class="register "><a href="">注册</a></li>
    </ul>
    <form class="login active">
      <input placeholder="用户名" class="user-name">
      <input placeholder="密码" class="password">
      <button>登录</button>
      <a href="" class="forget-password">忘记密码？</a>
    </form>
    <form class="register">
      <input placeholder="用户名" class="user-name">
      <input placeholder="邮箱">
      <input placeholder="密码">
      <input placeholder="确认密码" class="confirm-password">
      <button>注册</button>
    </form>
  </div>
</div>
